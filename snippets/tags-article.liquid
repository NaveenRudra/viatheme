<!-- /snippets/tags-article.liquid -->
{% comment %}

  This snippet renders a list item with all tags listed out.
  It is used in article.liquid and blog.liquid.

  More information:
   - index#article-tags
   - http://docs.shopify.com/themes/liquid-variables/article

{% endcomment %}

{% if article.tags.size > 0 %}
<ul class="tags">
  {% if article.tags.size == 1 %}
    <li class="label">{{ 'blogs.article.tags.one' | t }}:</li>
  {% else %}
    <li class="label">{{ 'blogs.article.tags.other' | t }}:</li>
  {% endif %}
  {% for tag in article.tags %}
    <li><a href="{{ blog.url }}/tagged/{{ tag | handle }}">{{ tag }}</a></li>
  {% endfor %}
</ul>
{% endif %}
