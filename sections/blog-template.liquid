<section class="collection blog" data-section-id="{{ section.id }}" data-section-type="blog-template">

  {% if section.settings.blog_layout == 'columns' %}
    {%- assign pagination_count = 6 -%}
  {% else %}
    {%- assign pagination_count = 5 -%}
  {% endif %}
  {% if section.blocks.size > 0 %}
    {%- assign enable_sidebar = true -%}
  {% else %}
    {%- assign enable_sidebar = false -%}
  {% endif %}

  {% paginate blog.articles by pagination_count %}
    <div class="wrapper">

    <header class="content-util">
    {% include 'breadcrumb' %}
    {% include 'social-icons' %}
    </header>

    <div class="{% if enable_sidebar %}grid{% elsif section.settings.blog_layout == 'column' %}single-column{% endif %}">
      <div class="collection-container blog-container">

        {% if section.settings.show_title %}
          <header class="collection-header">
            <div class="container">
              {% if current_tags %}
                <h1>{{ blog.title | link_to: blog.url }} &mdash; {{ current_tags.first }}</h1>
              {% else %}
                <h1>{{ blog.title }}</h1>
              {% endif %}
            </div>
          </header>
        {% endif %}

        {% if enable_sidebar %}
          <div class="mobile-aside-container">
            <a href="#" class="button simple">{{ 'layout.navigation.blog_menu' | t}}</a>
            <aside>
              {% include 'blog-sidebar' %}
            </aside>
          </div>
        {% endif %}

        <div class="blog-list {% unless section.settings.blog_layout == 'column' %}grid-layout{% endunless %}">
          {% for article in blog.articles %}
          <article {% unless section.settings.blog_layout == 'column' %}class="{% if section.settings.blog_layout == 'columns' %}grid-item{% elsif section.settings.blog_layout == 'featured-columns' and forloop.index > 1 %}grid-item{% endif %}"{% endunless %}>
            {%- assign image = article.image -%}
            {%- capture article_image -%}
            <div class="article-image">
              <a href="{{ article.url }}" class="card__image-wrapper" style="padding-top:{{ 1 | divided_by: image.aspect_ratio | times: 100}}%">
                {% assign image_widths = '360,540,720,900,1000,1200,1500,1800,2000,2400' %}
                {% include 'theme-rias' %}
                <img class="card__image lazyload fade-in"
                  data-src="{{ image_url_pattern }}"
                  data-widths="[{{ image_widths }}]"
                  data-aspectratio="{{ image.aspect_ratio }}"
                  data-sizes="auto"
                  alt="{{ image.alt | escape }}">
                <noscript>
                  <img class="card__image" src="{{ image | img_url: '394x' }}" alt="{{ image.alt | escape }}">
                </noscript>
              </a>
            </div>
            {%- endcapture -%}

            {% if article.image and section.settings.show_image_first == 'before' %}
              {{ article_image }}
            {% endif %}
            <header{% if section.settings.center_title %} class="centered"{% endif %}>
              <h2><a href="{{ article.url }}">{{ article.title }}</a></h2>
              {% capture author %}<strong>{{ article.author }}</strong>{% endcapture %}
              {% capture date %}<time datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'month_day_year' }}</time>{% endcapture %}
              <p class="byline">{% if section.settings.show_author %}{{ 'blogs.article.author_html' | t: author: author }}{% endif %}{% if section.settings.show_author and section.settings.show_date %} &middot; {% endif %}{% if section.settings.show_date %}{{ date }}{% endif %}</p>
            </header>
            {% if article.image and section.settings.show_image_first == 'after' %}
              {{ article_image }}
            {% endif %}
            <section>
              {% comment %}
                Add a surrounding div with class 'rte' to anything that will come from the rich text editor.
                Since this is just a listing page, you can either use the excerpt or truncate the full article.
              {% endcomment %}
              <div class="rte">
                {% if article.excerpt.size > 0 %}
                  {{ article.excerpt }}
                  <p class="read-more"><a href="{{ article.url }}" class="button outline">{{ 'blogs.article.read_more' | t }}</a></p>
                {% else %}
                  <p>{{ article.content }}</p>
                {% endif %}
              </div>

              {% comment %}
                Show off meta information like number of comments and tags.
              {% endcomment %}
              {% unless section.settings.show_tags == false and section.settings.show_comments == false %}
                  <div class="post-meta">
                    {% if blog.comments_enabled? %}
                      {% if section.settings.show_comments %}
                        <a href="{{ article.url }}#Comments" class="comments">{{ 'blogs.comments.comments_with_count' | t: count: article.comments_count }}</a>
                      {% endif %}
                    {% endif %}
                    {% if section.settings.show_tags %}
                      {% include 'tags-article' %}
                    {% endif %}
                  </div>
              {% endunless %}
            </section>
          </article>
          {% endfor %}

        </div>
        {% if paginate.pages > 1 %}
        <footer class="collection-footer">
          {% include 'pagination' %}
        </footer>
        {% endif %}
      </div>

      {% if enable_sidebar %}
        <div class="aside-container">
          <aside>
            {% include 'blog-sidebar' %}
          </aside>
        </div>
      {% endif %}
    </div>

  </div>
  {% endpaginate %}
</section>
{% schema %}
{
  "name": "Blog page",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show blog title",
      "default": true
    },
    {
      "type": "select",
      "id": "blog_layout",
      "label": "Layout",
      "options": [
        { "value": "column", "label": "Single column" },
        { "value": "columns", "label": "Two columns" },
        { "value": "featured-columns", "label": "Featured two columns" }
      ],
      "default": "column"
    },
    {
      "type": "radio",
      "id": "show_image_first",
      "label": "Article image placement",
      "options": [
        { "value": "before", "label": "Before title" },
        { "value": "after", "label": "After title" }
      ],
      "default": "after"
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "label": "Show author",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Show date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "center_title",
      "label": "Center article title",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_tags",
      "label": "Show tags",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_comments",
      "label": "Show comment count",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Sidebar image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Image link",
          "info": "Optional"
        }
      ]
    },
    {
      "type": "recent_posts",
      "name": "Sidebar recent posts",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Recent Posts"
        },
        {
          "type": "range",
          "id": "article_count_range",
          "label": "Number of posts to show",
          "min": 2,
          "max": 6,
          "step": 1,
          "default": 3
        },
        {
          "type": "checkbox",
          "id": "show_date",
          "label": "Show date",
          "default": true
        }
      ]
    },
    {
      "type": "menu",
      "name": "Sidebar menu",
      "settings": [
        {
          "type": "link_list",
          "id": "linklist",
          "label": "Menu",
          "default": "main-menu"
        }
      ]
    },
    {
      "type": "tags",
      "name": "Sidebar tags",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Blog categories"
        }
      ]
    },
    {
      "type": "rss",
      "name": "Sidebar rss",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Link label",
          "default": "RSS Feed"
        }
      ]
    },
    {
      "type": "html",
      "name": "Sidebar html",
      "limit": 1,
      "settings": [
        {
          "type": "html",
          "id": "code",
          "label": "HTML"
        }
      ]
    }
  ]
}
{% endschema %}
